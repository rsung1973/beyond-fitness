@using System.IO
@using System.Linq.Expressions

@using WebHome.Helper
@using WebHome.Models.Locale
@using WebHome.Models.ViewModel
@using WebHome.Models.DataEntity
@using WebHome.Controllers
@using Microsoft.AspNetCore.Mvc.ModelBinding


@{
    ModelStateDictionary _modelState;
    ModelSource<UserProfile> models;
    UserProfile _model;
    LessonTimeBookingViewModel _viewModel;

    _modelState = ViewContext.ModelState;
    models = (ModelSource<UserProfile>)ViewContext.HttpContext.Items["Models"]; ;
    _model = (UserProfile)this.Model;
    _viewModel = (LessonTimeBookingViewModel)ViewBag.ViewModel;
}

@{
    await Html.RenderPartialAsync("~/Views/ConsoleHome/Module/TodayLessonsBarEChartOption.cshtml", _model);
    await Html.RenderPartialAsync("~/Views/ConsoleHome/Module/MonthlyLessonHeatmapOption.cshtml", _model);
}
<script>
    $(function() {
        if ($global.echarts.showChart['lessonsBar']) {
            $global.echarts.showChart['lessonsBar']();
        }
        if ($global.echarts.showChart['lessonsHeatmap']) {
            $global.echarts.showChart['lessonsHeatmap']();
        }
    });
</script>
