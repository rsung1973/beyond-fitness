@functions
{
    decimal CalcRatio(MonthlyBranchRevenueGoal indicator, out decimal totalAchievementAmt)
    {
        if (indicator == null)
        {
            totalAchievementAmt = 0M;
            return 0M;
        }

        decimal indicatorAmt = (decimal)(indicator.CustomRevenueGoal ?? indicator.MonthlyBranchRevenueIndicator.RevenueGoal);
        decimal basePercentage = (decimal)(indicator.CustomIndicatorPercentage ?? indicator.MonthlyBranchRevenueIndicator.MonthlyRevenueGrade.IndicatorPercentage);
        totalAchievementAmt = (indicator.ActualLessonAchievement ?? 0) 
                    + (indicator.ActualSharedAchievement ?? 0) 
                    + (indicator.ATAchievement ?? 0) 
                    + (indicator.SRAchievement ?? 0) 
                    + (indicator.SDAchievement ?? 0);

        decimal achievementRatio = totalAchievementAmt * basePercentage / indicatorAmt;
        return Math.Round(achievementRatio, 2);
    }
}
@{

    ModelStateDictionary _modelState;
    ModelSource<UserProfile> models;
    MonthlyBranchRevenueGoal[] _model;

    _modelState = ViewContext.ModelState;
    models = (ModelSource<UserProfile>)ViewContext.HttpContext.Items["Models"];;
    _model = (MonthlyBranchRevenueGoal[])this.Model;

}
<table class="table table-striped table-custom nowrap dtIndicator" style="width:100%">
    <thead class="bg-darkteal">
        <tr>
            <th class="text-center">月份</th>
            <th class="text-center">達成率</th>
            <th class="text-center">業績金額</th>
            <th class="text-center">教練人數</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var g in _model)
        {
            decimal totalAchievementAmt;
            <tr>
                <td>@($"{g.MonthlyBranchRevenueIndicator.MonthlyIndicator.StartDate:yyyyMM}")</td>
                <td class="text-right">@(CalcRatio(g,out totalAchievementAmt))%</td>
                <td class="text-right">@($"{totalAchievementAmt:##,###,###,##0}")</td>
                <td class="text-right">@(g.MonthlyBranchRevenueIndicator.MonthlyIndicator.MonthlyCoachRevenueIndicator.Where(c => c.BranchID == g.BranchID).Count())</td>
            </tr>
        }
    </tbody>
</table>

