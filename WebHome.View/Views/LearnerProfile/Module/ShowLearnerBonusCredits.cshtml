@using System.IO
@using System.Linq.Expressions

@using WebHome.Helper
@using WebHome.Models.Locale
@using WebHome.Models.ViewModel
@using WebHome.Models.DataEntity
@using WebHome.Controllers
@using Microsoft.AspNetCore.Mvc.ModelBinding
@using Newtonsoft.Json

@{
    ModelStateDictionary _modelState;
    ModelSource<UserProfile> models;
    UserProfile _model;

    _modelState = ViewContext.ModelState;
    models = (ModelSource<UserProfile>)ViewContext.HttpContext.Items["Models"];;
    _model = (UserProfile)this.Model;

}
@{ 

///撈資料參考：/Report/BonusPromotionIndex
}
<div class="table-responsive">
    <table class="table table-striped table-custom nowrap dataTable-point" style="width:100%">
        <thead>
            <tr>
                <th>活動項目</th>
                <th>時間</th>
                <th>點數</th>
            </tr>
        </thead>
        <tbody>
            @{ 
                var taskItems = models.GetTable<PDQTask>()
                                    .Join(models.GetTable<PDQTaskBonus>(),
                                        t => t.TaskID, q => q.TaskID, (t, q) => t)
                                    .Where(t => t.UID == _model.UID);
                foreach(var g in taskItems.GroupBy(t=>t.PDQQuestion.GroupID))
                {
                    var item = g.First();
                        <tr>
                            <td>@(item.PDQQuestion.PDQGroup.GroupName)</td>
                            <td>@(g.Count()==1 ? $"{item.TaskDate:yyyy/MM/dd}" : null)</td>
                            <td>@(g.Sum(t=>t.PDQQuestion.PDQQuestionExtension.BonusPoint))</td>
                        </tr>
                }
            }
        </tbody>
    </table>
    <script>
            $(function () {

                if ($global.dtPoint != undefined) {
                    $global.dtPoint.destroy();
                }

                $global.dtPoint = $('.dataTable-point').DataTable({
                    "filter": false,
                    "bPaginate": false,
                    "info": false,
                    "order": [
