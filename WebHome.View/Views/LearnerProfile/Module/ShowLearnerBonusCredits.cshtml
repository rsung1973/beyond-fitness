                        "infoEmpty": "顯示 0 筆的資料",
                        "infoFiltered": "(總共從 _MAX_ 筆資料過濾)",
                        "loadingRecords": "快馬加鞭處理中...",
                        "processing": "快馬加鞭處理中...",
                        "search": "快速搜尋：",
                        "paginate": {
                            "first": "第一頁",
                            "last": "最後一頁",
                            "next": "下一頁",
                            "previous": "前一頁"
                        },
                    },
                    "columnDefs": [{
                        targets: [1, 2],
                        className: "align-center"
                    }],
                    scrollX: true,
                    scrollCollapse: true,
                    fixedColumns: {
