
@using System.IO
@using System.Linq.Expressions

@using WebHome.Helper
@using WebHome.Models.Locale
@using WebHome.Models.ViewModel
@using WebHome.Models.DataEntity
@using WebHome.Controllers
@using Microsoft.AspNetCore.Mvc.ModelBinding
@{

    ModelStateDictionary _modelState;
    ModelSource<UserProfile> models;
    int partialCount = (ViewContext.HttpContext.Items["PartialCount"] as int?) ?? -1;
    ViewContext.HttpContext.Items["PartialCount"] = ++partialCount;
    String _viewID = $"searchInput_{partialCount}";

    _modelState = ViewContext.ModelState;
    models = (ModelSource<UserProfile>)ViewContext.HttpContext.Items["Models"];;
}
<input type="text" id="@(_viewID)" class="form-control" name="userName" placeholder="@Html.Raw(ViewBag.SearchItem)" />
<span class="input-group-addon cursor" onclick="var e = jQuery.Event('keypress');e.which = 13;e.keyCode = 13;$('#@(_viewID)').trigger(e);">
    <i class="zmdi zmdi-search"></i>
    <script>
        $(function () {
            $('#@(_viewID)').keypress(function (event) {
                var event = event || window.event;
                var userName = $(event.target).val();
                var keycode = (event.keyCode ? event.keyCode : event.which);
                if (keycode == '13') {
                    $global.$searchInput = $(event.target);
                    searchInput(userName);
                }
            });

            function searchInput(param) {
                clearErrors();
                if (param.length < 2) {
                    Swal.fire({
                        title: "Opps！",
                        text: '@Html.Raw(ViewBag.LessThanTwo)',
                        icon: "warning",
                        showCancelButton: false,
                        confirmButtonColor: "#DD6B55",
                        confirmButtonText: "重新輸入!",
                        focusCancel: true
                    }).then((result) => {

                    });
                } else {
                    showLoading();
                    $.post('@Html.Raw(ViewBag.SearchAction)', { 'userName': param }, function (data) {
                        hideLoading();
                        if ($.isPlainObject(data)) {
                            if (data.result) {
                                Swal.fire(
                                    'Oops...',
                                    data.message,
                                    'warning'
                                )
                            } else {
                                Swal.fire({
                                    title: "Opps！",
                                    text: '@Html.Raw(ViewBag.DataNotFound)',
                                    icon: "warning",
                                    showCancelButton: false,
                                    confirmButtonColor: "#DD6B55",
                                    confirmButtonText: "重新輸入!",
                                    focusCancel: true
                                }).then((result) => {

                                });
                            }
                        } else {
                            $(data).appendTo($('body'));
                        }
                    });
                }
            }
        });

    </script>
</span>



