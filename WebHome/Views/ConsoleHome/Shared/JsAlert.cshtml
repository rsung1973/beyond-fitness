@using System.IO
@using System.Linq.Expressions
@using System.Web

@using WebHome.Helper
@using WebHome.Models.Locale
@using WebHome.Models.ViewModel
@using WebHome.Models.DataEntity
@using WebHome.Controllers
@using Microsoft.AspNetCore.Mvc.ModelBinding
@{
    QueryViewModel _viewModel = ViewBag.ViewModel as QueryViewModel;
    String _message;
    _message = (this.Model as String) ?? (String)ViewBag.Message ?? _viewModel?.Message;
}
@if (_message != null)
{
    <script>
        $(function(){
            Swal.fire({
                title: "",
                text: '@(Html.Raw(_message))',
                icon: '@(ViewBag.Icon ?? "warning")',
            }).then((result) => {

                @if (ViewBag.GoBack == true)
                {
                    <text>
                                window.history.go(-1);
                    </text>
                }
                @if (ViewBag.CloseWindow == true)
                {
                    <text>
                                window.close();
                    </text>
                }
            });
            setTimeout(function(){
                $('.swal2-select').css('display','none');
            },500);
        });
    </script>
}



