@using System.IO
@using System.Linq.Expressions

@using WebHome.Helper
@using WebHome.Models.Locale
@using WebHome.Models.ViewModel
@using WebHome.Models.DataEntity
@using WebHome.Controllers
@{

    ModelStateDictionary _modelState;
    ModelSource<UserProfile> models;
    TrainingItem _model;

    _modelState = (ModelStateDictionary)ViewBag.ModelState;
    models = ((SampleController<UserProfile>)ViewContext.Controller).DataSource;
    _model = (TrainingItem)this.Model;
    TrainingItemViewModel _viewModel = (TrainingItemViewModel)ViewBag.ViewModel;
    TrainingStage _stage = (TrainingStage)ViewBag.TrainingStage;
    var items = models.GetTable<TrainingStage>().OrderBy(s => s.StageID);
}

@foreach (var item in items)
{
    <button class="btn btn-raised bg-pink btn-sm btn-round waves-effect" type="button" data-toggle="collapse" data-target="#@($"collapse_{item.StageID}")" aria-expanded="false" aria-controls="@($"collapse_{item.StageID}")"> @(item.Stage)器材 </button>
}
@{ 
    string[] cssClass = new string[]
    {
        "collapse xl-pink",
        "collapse show xl-khaki",
        "collapse xl-seagreen",
        "collapse xl-blue",
        ""
    };
}
@foreach (var item in items)
{
    if (item.TrainingAids.Where(a => a.Status == (int)Naming.GeneralStatus.Successful)
                        .Count() == 0)
    {
        continue;
    }
    <div class="@(cssClass[item.StageID-1])" id="@($"collapse_{item.StageID}")">
        <div class="well">
            <div class="row">
                @foreach (var aid in item.TrainingAids
                            .Where(t => t.Status == (int)Naming.GeneralStatus.Successful))
                {
                    <div class="col-lg-3 col-md-3 col-sm-6 col-6">
                        <div class="checkbox">
                            <input name="AidID" value="@aid.AidID" type="checkbox"/>
                            <label for="AidID">@aid.ItemName</label>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
<script>
    $(function () {
        if ($global.viewModel.AidID && $global.viewModel.AidID.length > 0) {
            $global.viewModel.AidID.forEach(function (item, idx) {
                $('input:checkbox[name="AidID"][value=' + item + ']').prop('checked', true);
            });
        }
    });
</script>

