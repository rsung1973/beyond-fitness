
@using System.IO
@using System.Linq.Expressions

@using WebHome.Helper
@using WebHome.Models.Locale
@using WebHome.Models.ViewModel
@using WebHome.Models.DataEntity
@using WebHome.Controllers
@{

    ModelStateDictionary _modelState;
    ModelSource<UserProfile> models;
    QuestionnaireRequest _model;

    _modelState = (ModelStateDictionary)ViewBag.ModelState;
    models = ((SampleController<UserProfile>)ViewContext.Controller).DataSource;
    _model = (QuestionnaireRequest)this.Model;
}
<script>
    $(function () {
        swal({
            title: "自動帶入資料中",
            text: "阿呆會自動幫您帶入@($"{_model.PDQTask.First().TaskDate:yyyy/MM/dd}")填寫過的內容喔!",
            //type: "successful",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "繼續，不後悔",
            cancelButtonText: "我超強不用瞭解學生",
            closeOnConfirm: true,
            closeOnCancel: true,
        }, function (isConfirm) {
            if (isConfirm) {
                if ($global.resumeCharacter) {
                    $global.resumeCharacter();
                } else {
                    $('').launchDownload('@(Html.Raw(Url.Action("EditLearnerCharacter","ConsoleHome",new { _model.QuestionnaireID })))', { 'keyID': '@(_model.UID.EncryptKey())' });
                }
            } else {
                showLoading();
                $.post('@Html.Raw(Url.Action("RejectLearnerCharacter", "LearnerProfile", new {_model.QuestionnaireID }))', { 'keyID': '@(_model.UID.EncryptKey())' }, function (data) {
                    hideLoading();
                    if ($.isPlainObject(data)) {
                        if (data.result) {
                            if ($global.rejectCharacterDone) {
                                $global.rejectCharacterDone();
                            }
                        } else {
                            swal(data.message);
                        }
                    } else {
                        $(data).appendTo($('body'));
                    }
                });

            }
        });
    });
</script>
