    <link href="plugins/jquery-datatable/Responsive-2.2.2/css/responsive.bootstrap4.min.css" rel="stylesheet">
    <link href="plugins/jquery-datatable/FixedColumns-3.2.5/css/fixedColumns.bootstrap4.min.css" rel="stylesheet">

}

<section class="content profile-page">
    @{ ViewBag.BlockHeader = "X檔案";
        Html.RenderPartial("~/Views/ConsoleHome/Module/BlockHeader.cshtml", _model);}

    <!--本月運動時間-->
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-12">
                <div class="card profile-header bg-darkteal">
                    <div class="body">
                        <div class="profile-image inlineblock">
                            <a href="javascript:editLearner();">
                                @{
                                    ViewBag.ProfileClass = "small";
                                    Html.RenderPartial("~/Views/Common/ProfileImage.cshtml", _learner);
                                }
                            </a>
                        </div>
                        <div class="float-right">
                            @{ var purpose = _learner.PersonalExercisePurpose;}
                            @if (purpose != null)
                                    {
                                        Html.RenderPartial("~/Views/LearnerProfile/Module/PersonalExerciseRadarChart.cshtml", purpose);
                                <h6 class="@(purpose.PowerAbliityCss("text-center"))">@(purpose.PowerAbility!=null ? purpose.PowerAbility.Substring(0,3) : "？型") / @(purpose.Purpose ?? "？")期</h6>
                            }
                            else
                            {
                                <div class="pie">
                                    <div class="pie_light small">
                                        Opps!<br /><span>你很不了解這位學生喔！</span>
                                    </div>
                                </div>
                                <h6 class="col-green text-center">？型 / ？期</h6>
                            }
                        </div>
                        <div class="col-white inlineblock">
                            <strong>@(_learner.FullName())</strong> <span class="font-12"><i class="zmdi zmdi-cake"></i> @(_learner.YearsOld())</span>
                        </div>
                        <div class="font-20">
                            @{
                                DateTime monthStart = DateTime.Today.FirstDayOfMonth();

                                var lessons = models.GetTable<LessonTime>()
                                        .Where(r => r.GroupingLesson.RegisterLesson.Any(u => u.UID == _learner.UID))
                                        .Where(l => l.LessonAttendance != null);

                                var selfTrainingThisMonth = lessons.Where(l => l.ClassTime >= monthStart && l.ClassTime < DateTime.Today.AddDays(1));
                                var totalMinutes = selfTrainingThisMonth.Sum(l => l.DurationInMinutes) ?? 0;

                                var totalMinutesLastMonth = lessons
                                        .Where(l => l.ClassTime >= monthStart.AddMonths(-1) && l.ClassTime < DateTime.Today.AddMonths(-1).AddDays(1))
                                        .Sum(l => l.DurationInMinutes) ?? 0;
                            }
                            本月運動：<span class="col-lime counto" data-to="@(totalMinutes / 60)">@(totalMinutes / 60)</span>小時:<span class="col-lime counto" data-to="@(totalMinutes % 60)">@(totalMinutes % 60)</span>分鐘
                            @if (totalMinutes > totalMinutesLastMonth)
                            {
                                <i class="zmdi zmdi-caret-up zmdi-hc-2x text-danger"></i>
                            }
                            else if (totalMinutes < totalMinutesLastMonth)
                            {
                                <i class="zmdi zmdi-caret-down zmdi-hc-2x text-success"></i>
                            }
                        </div>
                        <div class="displayblock col-grey">
                            @{ 
                                var answers = _learner.PDQTask.Where(t => t.PDQQuestion.GroupID == 6);
                                var answerCount = answers.Count();
                                var rightAns = answers.Where(t => t.SuggestionID.HasValue && t.PDQSuggestion.RightAnswer == true);
                            }
                            目前已參加運動小學堂 @(answerCount) 次囉，得點數 @(rightAns.Count()) 點！
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--行事曆-->
    <div class="container-fluid page-calendar">
        <div class="card">
            <div class="row">
                <div class="col-md-12 col-lg-4 col-xl-4">
                    <div class="body">
                        <div class="row clearfix">
                            <div class="col-md-11 col-lg-12 col-9">
                            </div>
                            <div class="col-md-11 col-lg-12 col-3">
                                <button class="btn btn-default hidden-lg-up m-t-0 float-right" data-toggle="collapse" data-target="#open-events" aria-expanded="false" aria-controls="collapseExample"><i class="zmdi zmdi-chevron-down"></i></button>
                            </div>
                        </div>
                        <div class="collapse-xs collapse-sm collapse" id="open-events">
                            @{ Html.RenderPartial("~/Views/LearnerProfile/Module/LearnerEffectiveContractList.cshtml", _learner); }
                            @{ Html.RenderPartial("~/Views/LearnerProfile/Module/LearnerUnpaidContractList.cshtml", _learner); }
                            <hr>
                            <div class="event-name b-custom row">
                                @{ Html.RenderPartial("~/Views/LearnerProfile/Module/LearnerCharacter.cshtml", _learner); }
                            </div>
                            <button class="btn btn-darkteal waves-effect float-right" onclick="javascript:editProfile();">重新了解學生 GO</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-lg-8 col-xl-8">
                    <div class="body">
                        @{  Html.RenderPartial("~/Views/LearnerProfile/Module/LearnerLessonsReview.cshtml",_learner);   }
                        @{  Html.RenderAction("LearnerCalendar", "LearnerProfile", new { LearnerID = _learner.UID });   }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

