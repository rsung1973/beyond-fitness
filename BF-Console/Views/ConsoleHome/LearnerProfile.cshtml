    <script src="plugins/jquery-sparkline/jquery.sparkline.js"></script>
    <script>
        $(function () {

            $('.counto').countTo();

        });

        function editProfile() {
            $('').launchDownload('@(Html.Raw(Url.Action("EditLearnerCharacter","ConsoleHome",new { KeyID = _learner.UID.EncryptKey() })))', {});
        }
    </script>
}
