
@using System.IO
@using System.Linq.Expressions

@using WebHome.Helper
@using WebHome.Helper.DataOperation
@using WebHome.Models.Locale
@using WebHome.Models.ViewModel
@using WebHome.Models.DataEntity
@using WebHome.Controllers
@using Newtonsoft.Json
@{

    ModelStateDictionary _modelState;
    ModelSource<UserProfile> models;
    UserProfile _profile;
    String _viewID = $"unpaidPI{DateTime.Now.Ticks}";

    _modelState = (ModelStateDictionary)ViewBag.ModelState;
    models = ((SampleController<UserProfile>)ViewContext.Controller).DataSource;
    _profile = Context.GetUser();
}
@{ 
    PaymentQueryViewModel _viewModel = (PaymentQueryViewModel)ViewBag.ViewModel;
    if (_profile.IsCoach())
    {
        _viewModel.BranchID = models.GetTable<CoachWorkplace>().Where(c => c.CoachID == _profile.UID)
                                .FirstOrDefault()?.BranchID;
    }
    IQueryable<LessonTime> items = _viewModel.GetUnpaidPISession(models)
                                        .OrderBy(l => l.BranchID)
                                        .ThenBy(l => l.ClassTime);
}
<div class="card square xl-blue inbox">
    <div class="cover">
        <h6 class="m-t-20 m-l-20">P.I Session 尚未收款清單如下：</h6>
        <ul class="mail_list list-group list-unstyled">
            @foreach (var item in items)
            {
                <li class="list-group-item">
                    <div class="media">
                        <div class="pull-left">
                            <div class="controls">
                                <label class="fancy-checkbox">
                                    <input type="checkbox" id="basic_checkbox_@(item.LessonID)" name="RegisterID" value="@(item.RegisterID)" onclick="selectPI(this);" />
                                    <span></span>
                                </label>
                                @*<div class="checkbox">
                                    <input type="checkbox" id="basic_checkbox_@(item.LessonID)" name="RegisterID" value="@(item.RegisterID)" onclick="selectPI(this);" />
                                    <label for="basic_checkbox_@(item.LessonID)"></label>
                                </div>*@
                            </div>
                            <div class="thumb hidden-sm-down m-r-20">
                                @{
                                    ViewBag.ProfileClass = "rounded-circle popfit";
                                    Html.RenderPartial("~/Views/Common/ProfileImage.cshtml", item.RegisterLesson.UserProfile);
                                }
                            </div>
                        </div>
                        <div class="media-body">
                            <div class="media-heading">
                                <a class="m-r-10">@($"{item.ClassTime:yyyy/MM/dd}") - @(item.RegisterLesson.UserProfile.FullName())</a>
                                <span class="float-right">
                                    @{
                                        Html.RenderPartial("~/Views/Common/BranchStoreName.cshtml", item.BranchStore);
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>

<script>
    function selectPI(element) {
        var current = $(element).is(':checked');
        $('input:checkbox').prop('checked', false);
        $(element).prop('checked', current);
    }

    function commitPayoff() {

        swal({
            title: "新增P.I session收款",
            text: "請再次確認收款資料正確?",
            //type: "successful",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "確定，不後悔",
            cancelButtonText: "不, 重新輸入",
            closeOnConfirm: true,
            closeOnCancel: true,
        }, function (isConfirm) {
            if (isConfirm) {
                clearErrors();
                var formData = $('input,select,textarea').serializeObject();

                showLoading();
                $.post('@Html.Raw(Url.Action("CommitPaymentForPISession","Payment",new { _viewModel.PaymentID,TransactionType = (int)Naming.PaymentTransactionType.自主訓練, alertError = false }))', formData, function (data) {
                    hideLoading();
                    if ($.isPlainObject(data)) {
                        if (data.result) {
                            showLoading();
                            $('').launchDownload('@Html.Raw(Url.Action("InquirePaymentIndex","ConsoleHome"))', { 'PaymentID': data.PaymentID });
                        } else {
                            swal(data.message);
                        }
                    } else {
                        $(data).appendTo($('body')).remove();
                    }
                });
            } else {

            }
        });
    }

    function quitPayoff() {
        window.location.href = '@Url.Action("PaymentIndex","ConsoleHome")';
    }

</script>