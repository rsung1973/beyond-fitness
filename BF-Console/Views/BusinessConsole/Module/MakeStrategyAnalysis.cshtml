
@using System.IO
@using System.Linq.Expressions

@using WebHome.Helper
@using WebHome.Models.Locale
@using WebHome.Models.ViewModel
@using WebHome.Models.DataEntity
@using WebHome.Controllers
@using Newtonsoft.Json
@{
    ModelStateDictionary _modelState;
    ModelSource<UserProfile> models;
    MonthlyBranchIndicator _model;
    String _dialogID = $"strategy{DateTime.Now.Ticks}";

    _modelState = (ModelStateDictionary)ViewBag.ModelState;
    models = ((SampleController<UserProfile>)ViewContext.Controller).DataSource;
    _model = (MonthlyBranchIndicator)this.Model;

    MonthlyCoachRevenueIndicatorQueryViewModel _viewModel = (MonthlyCoachRevenueIndicatorQueryViewModel)ViewBag.ViewModel;
}
<div class="modal fade" id="@(_dialogID)" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <a class="closebutton" data-dismiss="modal"></a>
                <div class="list-group">
                    @*<a class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="title">風險考量</h5>
                        </div>
                        <div class="form-group p-t-0">
                            <textarea rows="1" cols="100" class="form-control" placeholder="請輸入任何您想輸入50個中文字內的內容..." name="RiskPrediction">@Html.Raw(_viewModel.RiskPrediction)</textarea>
                        </div>
                    </a>*@
                    <a class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="title">策略與總結</h5>
                        </div>
                        <div class="form-group p-t-0">
                            <textarea rows="5" cols="100" class="form-control" placeholder="請輸入任何您想輸入50個中文字內的內容..." name="Strategy">@Html.Raw(_viewModel.Strategy)</textarea>
                        </div>
                    </a>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-darkteal btn-round waves-effect btnConfirm"><i class="zmdi zmdi-edit"></i></button>
                <button type="button" class="btn btn-danger btn-round btn-simple btn-round waves-effect waves-red btnDelete"><i class="zmdi zmdi-delete"></i></button>
            </div>
        </div>
    </div>
    @{ Html.RenderPartial("~/Views/ConsoleHome/Shared/BSModalScript.cshtml", model: _dialogID);}

    <script>
        $(function () {
            $('#@(_dialogID) .btnConfirm').on('click', function (event) {
                showLoading();
                var postData = $('#@(_dialogID)').find('input,select,textArea').serializeObject();
                $.post('@Html.Raw(Url.Action("CommitStrategyAnalysis", "BusinessConsole", new { KeyID = _model.PeriodID.EncryptKey(),_model.BranchID }))', postData, function (data) {
                    hideLoading();
                    if ($.isPlainObject(data)) {
                        $('#@(_dialogID)').modal('hide');
                        refreshStrategy();
                    } else {
                        $('#@(_dialogID)').modal('hide');
                        $(data).appendTo($('body'));
                    }
                });
            });

            $('#@(_dialogID) .btnDelete').on('click', function (event) {
                swal({
                    title: "不後悔?",
                    text: "刪除後資料將無法回覆!",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    confirmButtonText: "確定, 不後悔",
                    cancelButtonText: "不, 點錯了",
                    closeOnConfirm: false,
                    closeOnCancel: false
                }, function (isConfirm) {
                    if (isConfirm) {
                        showLoading();
                        $.post('@Html.Raw(Url.Action("CommitStrategyAnalysis", "BusinessConsole", new { KeyID = _model.PeriodID.EncryptKey(),_model.BranchID }))', {}, function (data) {
                            hideLoading();
                            if ($.isPlainObject(data)) {
                                if (data.result) {
                                    $('#@(_dialogID)').modal('hide');
                                    swal("刪除成功!", "資料已經刪除 Bye!", "success");
                                    refreshStrategy();
                                } else {
                                    swal(data.message);
                                }
                            } else {
                                $(data).appendTo($('body')).remove();
                            }
                        });
                    } else {
                        swal("取消成功", "你的資料現在非常安全 :)", "error");
                    }
                });
            });
        });
    </script>
</div>

