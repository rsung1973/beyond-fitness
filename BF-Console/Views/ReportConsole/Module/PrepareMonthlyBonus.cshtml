@using System.IO
@using System.Linq.Expressions

@using WebHome.Helper
@using WebHome.Models.Locale
@using WebHome.Models.ViewModel
@using WebHome.Models.DataEntity
@using WebHome.Controllers
@using Newtonsoft.Json

@{
    ModelSource<UserProfile> models;
    ModelStateDictionary _modelState;
    IQueryable<CoachMonthlySalary> _model;
    AchievementQueryViewModel _viewModel;


    models = ((SampleController<UserProfile>)ViewContext.Controller).DataSource;
    _modelState = (ModelStateDictionary)ViewBag.ModelState;
    _model = (IQueryable<CoachMonthlySalary>)this.Model;
    _viewModel = (AchievementQueryViewModel)ViewBag.ViewModel;

}
@if(_model.Count()==0)
{
    <script>
        $(function () {
            swal("獎金抽成彙總表", "目前尚未執行獎金抽成批次，無法提供下載！", "error");
        });
    </script>
}
else
{
    <script>
        $(function () {
            swal({
                title: "是否直接下載？",
                text: "如果想編輯管理獎金與特別獎金，請點選我要編輯獎金資料按鈕",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "確定, 直接下載",
                cancelButtonText: "我要編輯獎金資料",
                closeOnConfirm: true,
                closeOnCancel: true
            }, function (isConfirm) {
                if (isConfirm) {
                    $('').launchDownload('@Html.Raw(Url.Action("CreateMonthlyBonusXlsx","Accounting"))', @Html.Raw(JsonConvert.SerializeObject(new { _viewModel.AchievementDateFrom })), 'report', true);
                } else {
                    showLoading();
                    $('').launchDownload('@Html.Raw(Url.Action("CoachBonusIndex","ConsoleHome"))', @Html.Raw(JsonConvert.SerializeObject(new { _viewModel.AchievementDateFrom })));
                }
            });
        });
    </script>
}